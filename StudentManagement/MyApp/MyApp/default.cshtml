                    <li><a ng-show="isLogin" href="#">{{currentUser.DisplayName}}</a></li>
                    <li ng-class="{ active: IsRouteActive('/login')}"><a ng-show="!isLogin" href="/login">Login</a></li>
                    <li><a ng-show="isLogin" ng-click="onLogout()">Logout</a></li>
